  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean:reports": "rimraf cypress/reports/mochawesome && rimraf cypress/reports/html",
    "test:login": "npm run clean:reports && cypress run --spec \"cypress/e2e/Login.cy.js\"",
    "test:search": "cypress run --spec \"cypress/e2e/Search.cy.js\"",
    "test:cart": "cypress run --spec \"cypress/e2e/Cart.cy.js\"",
    "test:paymentflow": "cypress run --spec \"cypress/e2e/PaymentFlow.cy.js\"",
    "test:guestcheckout": "cypress run --spec \"cypress/e2e/GuestCheckout.cy.js\"",
    "test:productdetail": "cypress run --spec \"cypress/e2e/ProductDetail.cy.js\"",
    "report:merge": "mochawesome-merge cypress/reports/mochawesome/*.json > cypress/reports/output.json",
    "report:generate": "marge cypress/reports/output.json -f report -o cypress/reports/html",
    "report:all": "npm run report:merge && npm run report:generate"
  },
