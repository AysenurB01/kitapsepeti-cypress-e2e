{
  "name": "kitapsepeti_otomasyon",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",

    "test:login": "cypress run --spec \"cypress/e2e/Login.cy.js\" --reporter mochawesome --reporter-options overwrite=false,timestamp=false",
    "test:search": "cypress run --spec \"cypress/e2e/Search.cy.js\" --reporter mochawesome --reporter-options overwrite=false,timestamp=false",
    "test:cart": "cypress run --spec \"cypress/e2e/Cart.cy.js\" --reporter mochawesome --reporter-options overwrite=false,timestamp=false",
    "test:paymentflow": "cypress run --spec \"cypress/e2e/PaymentFlow.cy.js\" --reporter mochawesome --reporter-options overwrite=false,timestamp=false",
    "test:guestcheckout": "cypress run --spec \"cypress/e2e/GuestCheckout.cy.js\" --reporter mochawesome --reporter-options overwrite=false,timestamp=false",
    "test:productdetail": "cypress run --spec \"cypress/e2e/ProductDetail.cy.js\" --reporter mochawesome --reporter-options overwrite=false,timestamp=false",
    
    "report:merge": "mochawesome-merge cypress/reports/mochawesome/*.json > cypress/reports/output.json",
    "report:generate": "npx mochawesome-report-generator cypress/reports/output.json -f report -o cypress/reports/html",
    "report:all": "npm run report:merge && npm run report:generate",
    
    "test:all": "npm run test:login && npm run test:search && npm run test:cart && npm run test:paymentflow && npm run test:guestcheckout && npm run test:productdetail"
  },
  "keywords": [],
